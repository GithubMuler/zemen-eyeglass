<%- include("./admin_partials/header"); -%>
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <%- include("./admin_partials/sidebar"); -%>

        <!-- Content Start -->
        <div class="content">
            <%- include("./admin_partials/navbar"); -%>
                <%- include("./admin_partials/messages"); -%>
                <% if (message){%>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" arial-label="close">
                        </button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                    <!-- Blank Start -->
                    <div class="container-fluid pt-4 px-4">
                        <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
                            <div class="bg-light rounded h-100 p-4">

                                <h6 class="mb-4">Products</h6>
                                <a href="/admin/product/add-product" type="button"
                                    class="btn btn-outline-primary m-2">Add product</a>




                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">Product</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Edit</th>
                                            <th scope="col">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach(function(product){ %>
                                            <tr>
                                                <td><%= product.title %> </td>
                                                <td>
                                                    <%= parseFloat(product.price).toFixed(2) %> birr
                                                </td>
                                                    <td>
                                                        <%= product.category %>
                                                    </td>
                                                <td>
                                                    <% if (product.image == "") {%>
                                               <img src="/img/favicon-32x32.png">
                                                   <% }  else {%>
                                             <img src="/<%= product.image %>" width="100px" height="100px" alt="">
                                                    <% } %>
                                                </td>
                                                <td> <a href="/admin/product/edit-product/<%= product._id %>"> Edit </a>
                                                </td>
                                                <td> <a id="ta" class="confirmDeletion"
                                                        href="/admin/product/delete-product/<%= product._id %>"> Delete
                                                    </a></td>
                                            </tr>
                                            <% });%>
                                    </tbody>
                                </table>
                             
                            </div>
                        </div>
                    </div>
                    <!-- Blank End -->
                    <%- include("./admin_partials/footer"); -%>
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
        </div>
