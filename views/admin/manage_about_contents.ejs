<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Manage about content</title>
    <meta charset="utf-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <link rel="stylesheet" href="/styles.css">




    <nav class="navbar navbar-expand-lg  navbar-dark bg-secondary">
        <div class="container">
            <a class="navbar-brand" href="#"> ABOUT PAGE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navbar-right" id="navbarNav">
                <ul class="nav navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/about/add_about_content">Add</a>
                    </li>
                   
                   
                </ul>
            </div>
        </div>
    </nav>

<body>
    <% if (message){%>
<div class="alert alert-dismissible fade show alert-<%= message.type %>"
    role="alert">
    <button class="btn-close" type="button" data-bs-dismiss="alert"arial-label="close">
        </button>
        <strong> <%= message.message %></strong>
</div>
  <%  } %>
    <% about.forEach(function(about){ %>

        <div class="card mb-3" style="max-width: 100%;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/<%= about.image %>" width="350" width="350" class="img-fluid rounded-start" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=about.title%>
                        </h5>
                        <p class="card-text">
                            <%=about.content%>
                        </p>
                        <p class="card-text"><small class="text-muted">Last updated </small></p>
                    </div>
                </div>
            </div>
        </div>

        <a href="/admin/about/update_about_contents/<%= about._id %>" class="btn btn-success btn-lg active" role="button"
            aria-pressed="true">update</a>
        <a href="/admin/about/delete_about_contents/<%= about._id %>" class=" btn btn-danger btn-lg active " role="button"
            aria-pressed="true">delete</a>


        </div>
        <%})%>
            </div>








