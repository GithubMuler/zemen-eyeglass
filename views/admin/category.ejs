<%- include("./admin_partials/header"); -%>
            <!-- Spinner Start -->
            <div id="spinner"
                class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <!-- Spinner End -->
            <%- include("./admin_partials/sidebar"); -%>

                <!-- Content Start -->
                <div class="content">
                    <%- include("./admin_partials/navbar"); -%>
                    <%- include("./admin_partials/messages"); -%>
                        <!-- Blank Start -->
                        <div class="container-fluid pt-4 px-4">
                          <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
                            <div class="bg-light rounded h-100 p-4">
                              
                                     <h6 class="mb-4">Categories</h6>
                                    <a href="/admin/category/add-category" type="button" class="btn btn-outline-primary m-2">Add category</a>

                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                               <th scope="col">Category Name</th>
                                                <th scope="col">Edit</th>
                                                <th scope="col">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% categories.forEach(function(cat){ %>         
                                            <tr>
                                               <td><%= cat.title %> </td>
                                                <td> <a href="/admin/category/edit-category/<%= cat._id %>">   Edit </a></td>
                                            <td> <a id= "ta"class="confirmDeletion" href="/admin/category/delete-category/<%= cat._id %>"> Delete </a></td>
                                            </tr>                                                              
                                            <% });%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- Blank End -->
                        <%- include("./admin_partials/footer"); -%>
                </div>
                <!-- Content End -->
                <!-- Back to Top -->
                <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
        </div>
